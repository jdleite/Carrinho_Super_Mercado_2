<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/id_txt_hint_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PreÃ§o Total"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/id_txt_tot_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="R$ 0,00"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/id_txt_hint_price"
        app:layout_constraintTop_toTopOf="@id/id_txt_hint_price"
        app:layout_constraintEnd_toEndOf="@id/id_txt_hint_price"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/id_hint_quantity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Total de Itens"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/id_txt_tot_price"
        app:layout_constraintTop_toBottomOf="@id/id_txt_tot_price"/>

    <TextView
        android:id="@+id/id_txt_quantity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/id_hint_quantity"
        app:layout_constraintTop_toBottomOf="@+id/id_hint_quantity"/>



</androidx.constraintlayout.widget.ConstraintLayout>